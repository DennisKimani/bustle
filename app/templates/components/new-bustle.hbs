{{#if addNewBustle}}
<div>
  <form>
    <div class="form-group">
      <label for="name">Name</label>
      {{input value=name id="name"}}
    </div>

    <div class="form-group">
      <label for="detail">Detail</label>
      {{input value=detail id="detail"}}
    </div>

    <div class="form-group">
      <label for="image">Image URL</label>
      {{input value=image id="image"}}
    </div>

    <button {{action 'saveBustle'}}>Save</button>
  </form>
</div>
{{else}}
<button {{action 'bustleFormShow'}}>New Bustle</button>
{{/if}}
